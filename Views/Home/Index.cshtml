@{
    ViewData["Title"] = "Home Page";
}

<section id="home" class="pt-16 hero-gradient">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 md:py-32 text-center">
        <h1 class="text-4xl md:text-6xl font-extrabold text-gray-900 leading-tight">
            Stop Guessing. <span class="text-blue-600">Start Growing.</span>
        </h1>
        <p class="mt-6 max-w-2xl mx-auto text-lg text-gray-600">
            Upload your resume and let our AI analyze your skills. We'll match you with the perfect job and show you the exact skills you need to land it.
        </p>
        <div class="mt-8">
            <a href="/Identity/Account/Register" class="inline-block bg-blue-600 text-white font-bold text-lg px-8 py-4 rounded-lg shadow-lg hover:bg-blue-700 transform hover:scale-105 transition-transform">
                Find Your Future Now
            </a>
        </div>
    </div>
</section>

<!-- Features Section -->
<section id="features" class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center fade-in-section">
            <h2 class="text-3xl font-bold text-gray-900">A Smarter Way to Build Your Career</h2>
            <p class="mt-4 text-lg text-gray-600">Everything you need to go from student to professional.</p>
        </div>
        <div class="mt-16 grid gap-10 md:grid-cols-2 lg:grid-cols-4">
            <div class="feature-card bg-white p-8 rounded-xl shadow-md border border-gray-200/50 fade-in-section">
                <div class="text-4xl text-blue-500 mb-4">📄</div>
                <h3 class="text-xl font-bold text-gray-900">AI Resume Analysis</h3>
                <p class="mt-2 text-gray-600">Our system intelligently extracts and understands the skills listed on your resume.</p>
            </div>
            <div class="feature-card bg-white p-8 rounded-xl shadow-md border border-gray-200/50 fade-in-section" style="transition-delay: 100ms;">
                <div class="text-4xl text-blue-500 mb-4">🎯</div>
                <h3 class="text-xl font-bold text-gray-900">Precision Job Matching</h3>
                <p class="mt-2 text-gray-600">We match your unique skill set to our database of curated job opportunities.</p>
            </div>
            <div class="feature-card bg-white p-8 rounded-xl shadow-md border border-gray-200/50 fade-in-section" style="transition-delay: 200ms;">
                <div class="text-4xl text-blue-500 mb-4">🔬</div>
                <h3 class="text-xl font-bold text-gray-900">Skill Gap Analysis</h3>
                <p class="mt-2 text-gray-600">Instantly see which required skills you're missing for your dream job.</p>
            </div>
            <div class="feature-card bg-white p-8 rounded-xl shadow-md border border-gray-200/50 fade-in-section" style="transition-delay: 300ms;">
                <div class="text-4xl text-blue-500 mb-4">📚</div>
                <h3 class="text-xl font-bold text-gray-900">Personalized Learning</h3>
                <p class="mt-2 text-gray-600">Get recommendations for top online courses to fill your skill gaps.</p>
            </div>
        </div>
    </div>
</section>

<!-- How It Works Section with Gemini -->
<section id="how-it-works" class="py-20 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center fade-in-section">
            <h2 class="text-3xl font-bold text-gray-900">See Our AI in Action</h2>
            <p class="mt-4 text-lg text-gray-600">Let's quickly analyze a sample job description.</p>
        </div>
        <div class="mt-12 max-w-3xl mx-auto fade-in-section">
            <div class="bg-white p-6 rounded-xl shadow-lg border border-gray-200/80">
                <label for="job-description" class="block text-sm font-medium text-gray-700">Paste a job description here:</label>
                <textarea id="job-description" rows="8" class="mt-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" placeholder="e.g., We are looking for a proactive Software Engineer to join our growing team..."></textarea>
                <button id="summarize-btn" class="mt-4 w-full inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    ✨ Summarize Key Points
                </button>
                <div id="summary-loader" class="hidden loader"></div>
                <div id="summary-result" class="mt-6 p-4 rounded-md gemini-result-box hidden"></div>
            </div>
        </div>
    </div>
</section>

