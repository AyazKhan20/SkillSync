@model IEnumerable<SmartJobRecommender.Models.Job>

@{
    ViewData["Title"] = "Manage Jobs";
}

<div class="max-w-7xl mx-auto p-4 sm:p-6 lg:p-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-6">Job Postings Management</h1>

    <!-- Action Buttons -->
    <div class="flex justify-between items-center mb-6">
        <a asp-action="CreateJob" class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition-colors">
            + Create New Job
        </a>
        <a asp-action="ManageSkills" class="text-blue-600 hover:text-blue-800 text-sm font-medium">
            Manage Skills
        </a>
    </div>

    <!-- Job List Table -->
    <div class="bg-white shadow-md rounded-xl overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Job Title & Company
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Type / Location
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Required Skills
                    </th>
                    <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="4" class="px-6 py-4 text-center text-gray-500">
                            No jobs found. Click "Create New Job" to get started.
                        </td>
                    </tr>
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm font-medium text-gray-900">@item.Title</div>
                            <div class="text-sm text-gray-500">@item.Company</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            @item.JobType <br />
                            <span class="text-xs text-gray-400">@item.Location</span>
                        </td>
                        <td class="px-6 py-4">
                            <div class="flex flex-wrap gap-1">
                                @foreach (var jobSkill in item.JobSkills)
                                {
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                        @jobSkill.Skill.Name
                                    </span>
                                }
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                            <a asp-action="EditJob" asp-route-id="@item.Id" class="text-indigo-600 hover:text-indigo-900">Edit</a> |
                            <a asp-action="DeleteJob" asp-route-id="@item.Id" class="text-red-600 hover:text-red-900">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>