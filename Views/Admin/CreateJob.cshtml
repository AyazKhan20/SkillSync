@model SmartJobRecommender.Models.ViewModels.JobViewModel

@{
    ViewData["Title"] = "Create Job Posting";
}

<div class="max-w-4xl mx-auto p-4 sm:p-6 lg:p-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-6">Create New Job Posting</h1>

    <div class="bg-white p-8 rounded-xl shadow-md">
        <form asp-action="CreateJob" method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Title & Company -->
                <div class="col-span-1">
                    <label asp-for="Title" class="block text-sm font-medium text-gray-700"></label>
                    <input asp-for="Title" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" />
                    <span asp-validation-for="Title" class="text-red-500 text-sm"></span>
                </div>
                <div class="col-span-1">
                    <label asp-for="Company" class="block text-sm font-medium text-gray-700"></label>
                    <input asp-for="Company" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" />
                    <span asp-validation-for="Company" class="text-red-500 text-sm"></span>
                </div>

                <!-- Location & Job Type -->
                <div class="col-span-1">
                    <label asp-for="Location" class="block text-sm font-medium text-gray-700"></label>
                    <input asp-for="Location" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" />
                    <span asp-validation-for="Location" class="text-red-500 text-sm"></span>
                </div>
                <div class="col-span-1">
                    <label asp-for="JobType" class="block text-sm font-medium text-gray-700"></label>
                    <select asp-for="JobType" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
                        <option value="Full-time">Full-time</option>
                        <option value="Part-time">Part-time</option>
                        <option value="Internship">Internship</option>
                        <option value="Contract">Contract</option>
                    </select>
                    <span asp-validation-for="JobType" class="text-red-500 text-sm"></span>
                </div>
            </div>

            <!-- Description -->
            <div class="mt-6">
                <label asp-for="Description" class="block text-sm font-medium text-gray-700">Full Job Description</label>
                <textarea asp-for="Description" rows="6" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500"></textarea>
                <p class="text-xs text-gray-500 mt-1">Include key responsibilities and required qualifications, as the system will extract skills from this text later.</p>
                <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
            </div>

            <!-- Skills Selection -->
            <div class="mt-6">
                <h2 class="text-lg font-semibold text-gray-900 mb-3">Required Skills (Select All That Apply)</h2>
                <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4 p-4 border border-gray-200 rounded-md bg-gray-50">
                    @for (int i = 0; i < Model.AllSkills.Count; i++)
                    {
                        <div class="flex items-center">
                            <input type="hidden" asp-for="AllSkills[i].SkillId" />
                            <input type="hidden" asp-for="AllSkills[i].SkillName" />
                            <input asp-for="AllSkills[i].IsSelected" type="checkbox" class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" />
                            <label asp-for="AllSkills[i].IsSelected" class="ml-2 text-sm text-gray-700">@Model.AllSkills[i].SkillName</label>
                        </div>
                    }
                </div>
                @if (!Model.AllSkills.Any())
                {
                    <p class="text-red-500">No skills found. Please add skills via the Manage Skills page first.</p>
                }
            </div>

            <div class="mt-6">
                <button type="submit" class="w-full bg-blue-600 text-white font-bold py-3 rounded-md hover:bg-blue-700 transition-colors">Post Job</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}