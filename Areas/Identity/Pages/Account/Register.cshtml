@page
@model SmartJobRecommender.Areas.Identity.Pages.Account.RegisterModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up - Smart Job Recommender</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #0f172a; /* Slate 900 for a deep, dark background */
        }

        .bg-overlay {
            /* Optional: Add a subtle background image or pattern here if desired */
            background-image: url('https://placehold.co/1920x1080/0f172a/0f172a');
            background-size: cover;
            background-position: center;
        }

        .register-card {
            background-color: rgba(2, 6, 23, 0.95); /* Semi-transparent dark blue/black for card */
            box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
        }
    </style>
</head>
<body>

    <!-- Full-Screen Register Container -->
    <div class="min-h-screen flex flex-col items-center justify-center p-4 bg-overlay">

        <!-- Header/Logo (Top Left, Consistent with Login) -->
        <header class="absolute top-0 left-0 p-8">
            <h1 class="text-3xl font-bold text-blue-600">SJR</h1>
        </header>

        <!-- Register Form Card -->
        <div class="register-card w-full max-w-md p-8 sm:p-12 rounded-lg text-white">
            <h2 class="text-3xl font-bold mb-8 text-white">Sign Up</h2>

            <!-- FORM START: Replace the inner content of this form tag with your scaffolded Identity form content, ensuring the class is retained for styling -->
            <form id="registerForm" method="post" class="space-y-6">

                <!-- Email Input Field -->
                <div>
                    <label for="Input_Email" class="sr-only">Email</label>
                    <input type="email" id="Input_Email" name="Input.Email" required class="w-full px-4 py-3 rounded-md bg-slate-700 border-none placeholder-slate-400 focus:ring-blue-500 focus:border-blue-500 text-white" placeholder="Email address">
                    @* Placeholder for: <span asp-validation-for="Input.Email" class="text-red-400 text-sm"></span> *@
                </div>

                <!-- Password Input Field -->
                <div>
                    <label for="Input_Password" class="sr-only">Password</label>
                    <input type="password" id="Input_Password" name="Input.Password" required class="w-full px-4 py-3 rounded-md bg-slate-700 border-none placeholder-slate-400 focus:ring-blue-500 focus:border-blue-500 text-white" placeholder="Password (min 6 characters)">
                    @* Placeholder for: <span asp-validation-for="Input.Password" class="text-red-400 text-sm"></span> *@
                </div>

                <!-- Confirm Password Input Field -->
                <div>
                    <label for="Input_ConfirmPassword" class="sr-only">Confirm Password</label>
                    <input type="password" id="Input_ConfirmPassword" name="Input.ConfirmPassword" required class="w-full px-4 py-3 rounded-md bg-slate-700 border-none placeholder-slate-400 focus:ring-blue-500 focus:border-blue-500 text-white" placeholder="Confirm Password">
                    @* Placeholder for: <span asp-validation-for="Input.ConfirmPassword" class="text-red-400 text-sm"></span> *@
                </div>

                <!-- Submit Button -->
                <button type="submit" class="w-full py-3 bg-blue-600 rounded-md font-semibold text-lg hover:bg-blue-700 transition-colors shadow-lg">
                    Sign Up
                </button>
            </form>
            <!-- FORM END -->

            <div class="mt-8 text-center">
                <p class="text-slate-400">
                    Already a member?
                    <a href="/Identity/Account/Login" class="text-white hover:text-blue-400 font-semibold">Sign in here.</a>
                </p>
            </div>
        </div>
    </div>

</body>
</html>